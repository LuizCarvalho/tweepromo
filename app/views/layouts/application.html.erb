<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title> Tweepromo 2.1 </title>
    <%= stylesheet_link_tag 'style' %>
    <link REL="SHORTCUT ICON"  href="favicon.ico" />
  </head>
  <body>
    <!-- header -->
    <div id="header">
      <div id="logo"><a href="#">Tweepromo 2.1</a></div>
      <div id="menu">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/login">Login</a></li>
          <li><a href="/promoves">Promoves</a></li>
          <li><a href="/users">Usuarios</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
    <!--end header -->
    <!-- main -->
    <div id="main">
      <div id="content">
        <div id="sidebar">
          <div id="sidebar_top"></div>
          <% if logged_in?  %>
          <div id="sidebar_text">
            <p><%= image_tag current_user.profile_image_url %></p>
            <h2><%= link_to current_user.login,"http://twitter.com/#{current_user.login}" %></h2>

          </div>
          <% end %>

          <div id="sidebar_bottom"></div>
        </div>

        <p style="color: green"><%= flash[:notice] %></p>

        <%= yield %>

      </div>



      <!-- footer -->
      <div id="footer">
        <div id="left_footer">&copy; Copyright 2011<a href="http://www.redrails.com.br" title="RedRails Blog"><strong> RedRails </strong>blog</a> </div>
        <div id="right_footer">

          <!-- Please do not change or delete this link. Read the license! Thanks. :-) -->
          Design by <a href="http://www.realitysoftware.ca" title="Website Design">Reality Software</a>

        </div>
      </div>
      <!-- end footer -->
    </div>
    <!-- end main -->

  </body>
</html>
